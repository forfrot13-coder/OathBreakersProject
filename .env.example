# .env.example - Copy this to .env and fill with your values for production
# =====================================================================
# ENVIRONMENT CONFIGURATION
# =====================================================================
# Set to 'production' to enable strict environment variable validation
# Options: development, staging, production
ENVIRONMENT=production

# =====================================================================
# DJANGO SETTINGS
# =====================================================================
# Generate a secret key with:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here

# Set to False in production
DJANGO_DEBUG=False

# Comma-separated list of allowed hosts (e.g., yourdomain.com,www.yourdomain.com)
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# =====================================================================
# DATABASE CONFIGURATION
# =====================================================================
POSTGRES_DB=oathbreakers_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =====================================================================
# CSRF CONFIGURATION (Optional)
# =====================================================================
# Comma-separated list of trusted origins for CSRF
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
