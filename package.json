{
  "name": "oathbreakers",
  "version": "1.0.0",
  "description": "Django trading card game with embedded React frontend",
  "private": true,
  "scripts": {
    "dev": "npm run build:css",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npx tailwindcss -i game/static/game/css/tailwind.src.css -o game/static/game/css/tailwind.css --minify",
    "build:js": "webpack --mode production --config webpack.config.js",
    "watch:js": "webpack --mode development --watch --config webpack.config.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "zustand": "^4.4.7",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "babel-loader": "^9.1.3",
    "@babel/core": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  }
}
